<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntelligentHabitacion.MainPage">
    <StackLayout>
        <Label Margin="0,70,0,0" Text="Porque morar com os amigos" FontSize="20" HorizontalOptions="CenterAndExpand" TextColor="Black"></Label>
        <Label Text="deve ser divertido e organizado" FontSize="16" HorizontalOptions="CenterAndExpand" TextColor="Black" Style="{x:StaticResource LabelThin}"></Label>

        <Image Source="TelaSplash" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"></Image>

        <Button CornerRadius="16" HeightRequest="60" WidthRequest="160" BackgroundColor="{x:StaticResource YellowDefault}" Text="Get Started" TextColor="Black" Margin="0,0,50,35" HorizontalOptions="EndAndExpand"></Button>
    </StackLayout>
</ContentPage>
