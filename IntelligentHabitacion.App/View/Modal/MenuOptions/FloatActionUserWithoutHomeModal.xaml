<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:resourceText="clr-namespace:IntelligentHabitacion.App"
    xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
    BackgroundColor="Transparent"
    x:Class="IntelligentHabitacion.App.View.Modal.MenuOptions.FloatActionUserWithoutHomeModal">
    <Frame BackgroundColor="Transparent" VerticalOptions="End" HorizontalOptions="End" HasShadow="True" WidthRequest="200" HeightRequest="160" Padding="0" Margin="0,0,20,100">
        <StackLayout>
            <StackLayout Margin="0,10,10,10" Spacing="-6">
                <StackLayout Orientation="Horizontal" HorizontalOptions="End" Margin="0,15,0,0">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Loggout_Tapped"></TapGestureRecognizer>
                    </StackLayout.GestureRecognizers>
                    <Label TextColor="White" Padding="7" Text="{x:Static resourceText:ResourceText.TITULO_LOGGOUT}" BackgroundColor="#607d8b" Style="{StaticResource LabelExtraBold}" FontSize="14" VerticalOptions="Center"></Label>
                    <Image Source="ActionButtonLoggout" HeightRequest="40" WidthRequest="40"></Image>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </Frame>
</pages:PopupPage>
