<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntelligentHabitacion.App.Template.Informations.PhonenumberToCallComponent">
    <ContentView.Content>
        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
            <StackLayout HorizontalOptions="FillAndExpand">
                <Label x:Name="LabelTitle" Style="{x:StaticResource LabelThin}" FontSize="8"></Label>
                <Label x:Name="LabelPhoneNumber" Style="{x:StaticResource LabelMedium}" FontSize="14"></Label>
            </StackLayout>
            <Grid VerticalOptions="CenterAndExpand" HorizontalOptions="End" Margin="0,0,1,0" RowDefinitions="30">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="MakePhoneCall_Tapped"></TapGestureRecognizer>
                </Grid.GestureRecognizers>
                <Ellipse Grid.Row="0" HeightRequest="30" WidthRequest="30" x:Name="BackgroundIlustrationPhone"></Ellipse>
                <Image Grid.Row="0" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Source="IconPhone" HeightRequest="16" WidthRequest="15"></Image>
            </Grid>
        </StackLayout>
    </ContentView.Content>
</ContentView>